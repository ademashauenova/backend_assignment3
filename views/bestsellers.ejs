<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="bestsellers_styles.css">
  <title>NY Times Best Sellers Search</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="navbar-brand mb-0 h1 pl-4">APIs</div>
        <button class="navbar-toggler justify-content-end" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item mx-3">
                    <a class="nav-link" href="/main">Weather</a>
                </li>
                <li class="nav-item mx-3">
                    <a class="nav-link active" href="/bestsellers">Book Bestsellers</a>
                </li>
                <li class="nav-item mx-3">
                    <a class="nav-link" href="/museum">Rijksmuseum</a>
                </li>
            </ul>
        </div>
    </nav>
  <h2 class="mt-5">Search for NY Times Best Sellers by Title</h2>
  
  <form id="searchForm" action="/bestsellers" method="get" class="mt-3">
    <input type="text" id="title" name="title" placeholder="Enter book title" required>
    <button type="submit">Search</button>
    <button type="button" data-bs-toggle="modal" data-bs-target="#historyModal">View Search History</button>
  </form>


  <div id="searchResults">
    <% if (book) { %>
      <% book.results.forEach(bookItem => { %>
        <div class="book-item">
            <p>Title: <%= bookItem.title %></p>
            <p>Author: <%= bookItem.author %></p>
            <p>Description: <%= bookItem.description %></p>
            <p>Publisher: <%= bookItem.publisher %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>No books found for the given title</p>
    <% } %>
  </div>

  <div class="modal fade" id="historyModal" tabindex="-1" aria-labelledby="historyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="historyModalLabel">Bestsellers Search History</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <ul id="historyList">
            <% history.reverse().forEach(search => { %>
              <li>
                <strong>Title:</strong> <%= search.title %><br>
                <strong>Author:</strong> <%= search.author %><br>
                <strong>Timestamp: </strong> <%= search.timestamp %></p>
                <strong>Description:</strong> <%= search.description %><br>
                <strong>Publisher:</strong> <%= search.publisher %><br>
                <hr>
              </li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>
  </div>


  <footer class="mt-5 text-center">
    <p>Shauenova Adema SE-2204</p>
  </footer>

  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>